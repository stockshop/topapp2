<p id="notice"><%= notice %></p>
<div class="center jumbotron">
  <h1>Welcome to the Toy App</h1>

  <h2>
    This is the home page for the
    <a href="http://www.toyapp.com/">Toy app</a>
    Toy application.
  </h2>

  <%= link_to "Sign up now!", '#', class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo"),
            'http://rubyonrails.org/' %>

<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-primitive btn-primary' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success btn-primary' %></td>
        <td><%= link_to 'Destroy', user, class: 'btn btn-danger btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primitive btn-primary' %>
</div>